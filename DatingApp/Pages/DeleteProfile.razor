@page "/delete-profile"
@inject IDatingAppService DatingAppService
@inject NavigationManager Navigation

<h3>Delete Profile</h3>

<p>Are you sure you want to delete your profile?</p>
<button @onclick="DeleteProfileAsync">Delete Profile</button>

@code {
    private async Task DeleteProfileAsync()
    {
        try
        {
            bool success = await DatingAppService.DeleteProfileAsync();

            if (success)
            {
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                // Handle delete profile failure
                Console.WriteLine("Error deleting profile.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}
